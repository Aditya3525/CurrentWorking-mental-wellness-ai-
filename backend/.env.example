# --- Core Server -----------------------------------------------------------
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
LOG_LEVEL=info

# --- Database --------------------------------------------------------------
# Replace with your production database connection string.
DATABASE_URL="postgresql://username:password@localhost:5432/mental_wellbeing_db"

# --- Authentication & Sessions --------------------------------------------
# Generate a strong value before deploying.
JWT_SECRET=replace_with_secure_random_value
JWT_EXPIRE=7d

# --- Rate Limiting ---------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --- Third-Party Integrations ---------------------------------------------
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
YOUTUBE_API_KEY=your_youtube_data_api_key

# --- AI Platform (Global defaults) ----------------------------------------
AI_PROVIDER_PRIORITY=huggingface,gemini,openai,anthropic,ollama
AI_ENABLE_FALLBACK=true
AI_USAGE_LOGGING=true
AI_VERBOSE_LOGGING=false
AI_PROVIDER_MAX_FAILURES_BEFORE_COOLDOWN=10  # INCREASED: Allows more retries before cooldown (default: 10, was: 3)
AI_PROVIDER_COOLDOWN_MS=180000  # DECREASED: Cooldown period in ms (default: 180000 = 3 min, was: 300000 = 5 min)
AI_MAX_TOKENS=600
AI_TEMPERATURE=0.6
AI_TIMEOUT=30000
AI_MAX_DETAIL_ASSESSMENTS=3
AI_MAX_DETAIL_RESPONSES=4
AI_MAX_DETAIL_LENGTH=140

# --- OpenAI ---------------------------------------------------------------
OPENAI_API_KEY_1=
OPENAI_API_KEY_2=
OPENAI_API_KEY_3=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=600
OPENAI_TEMPERATURE=0.6
OPENAI_TIMEOUT=30000

# --- Anthropic ------------------------------------------------------------
ANTHROPIC_API_KEY_1=
ANTHROPIC_API_KEY_2=
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
ANTHROPIC_MAX_TOKENS=600
ANTHROPIC_TEMPERATURE=0.6
ANTHROPIC_TIMEOUT=30000

# --- Google Gemini --------------------------------------------------------
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
GEMINI_API_KEY_3=
GEMINI_MODEL=gemini-2.0-flash-thinking-exp
GEMINI_MAX_TOKENS=600
GEMINI_TEMPERATURE=0.6
GEMINI_TIMEOUT=30000

# --- Hugging Face ---------------------------------------------------------
HUGGINGFACE_API_KEY_1=
HUGGINGFACE_API_KEY_2=
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=Guilherme34/Psychologist-3b
HUGGINGFACE_MAX_TOKENS=600
HUGGINGFACE_TEMPERATURE=0.6
HUGGINGFACE_TIMEOUT=30000

# --- Ollama (local fallback) ----------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_MAX_TOKENS=600
OLLAMA_TEMPERATURE=0.6
OLLAMA_TIMEOUT=60000
OLLAMA_ENABLED=false
